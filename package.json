{
  "name": "simple-type-guard",
  "version": "3.2.7",
  "description": "This module allows you to quickly and safely validate variables against a defined template, enforced by Typescript. No hassle and easy to scan.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hughriegelwt/simple-type-guard"
  },
  "scripts": {
    "test": "npm run test:types && npm run test:unit",
    "test:unit": "jest --config jest.config.js",
    "test:types": "npm run build && tsd",
    "build": "rm -rf ./lib && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint --ext=.ts  src",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "ts",
    "type",
    "guard",
    "verify",
    "validate",
    "unknown",
    "template"
  ],
  "author": "Hugh Riegel",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "tsd": "^0.24.1",
    "typescript": "^4.8.3"
  },
  "tsd": {
    "directory": "type-tests"
  }
}

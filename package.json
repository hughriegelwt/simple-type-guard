{
  "name": "simple-type-guard",
  "version": "2.0.2",
  "description": "This module allows you to quickly and safely validate variables against a defined template, enforced by Typescript. No hassle and easy to scan.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "npm run test:types && npm run test:unit",
    "test:unit": "jest --config jest.config.js",
    "test:types": "npm run build && tsd",
    "build": "rm -rf ./lib && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "ts",
    "type",
    "guard",
    "verify",
    "validate",
    "unknown",
    "template"
  ],
  "author": "Hugh Riegel",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsd": "^0.17.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {},
  "tsd": {
    "directory": "type-tests"
  }
}
